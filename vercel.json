{
  "version": 2,
  "builds": [
    {
      "src": "backend/api.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "installCommand": "pip install -r requirements.txt"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api.py" },
    { "src": "/(.*)", "dest": "/backend/api.py" }
  ]
}
